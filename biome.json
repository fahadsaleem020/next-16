{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**", "!node_modules", "!.next", "!dist", "!build", "!.vscode"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 140
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "useImportExtensions": "off",
        "noUnusedImports": "error",
        "useExhaustiveDependencies": "warn",
        "noUnusedVariables": "error",
        "noUnusedFunctionParameters": "error",
        "noUnknownProperty": "off"
      },
      "a11y": "off",
      "recommended": true,
      "style": { "noNonNullAssertion": "off" },
      "suspicious": {
        "noExplicitAny": "off",
        "noUnknownAtRules": "off",
        "useIterableCallbackReturn": "warn",
        "noArrayIndexKey": "off",
        "noControlCharactersInRegex": "off"
      },
      "security": { "noDangerouslySetInnerHtml": "warn" }
    },
    "domains": {
      "next": "recommended",
      "react": "recommended"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "css": {
    "parser": { "tailwindDirectives": true },
    "formatter": {
      "enabled": true,
      "indentWidth": 2
    }
  }
}
